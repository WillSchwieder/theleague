<div>
  <div>
    <h1>
      List of all games
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new game
    </h2>

    <form action="/insert_game" method="post">
      <div>
        <label for="home_team_id_box">
          Home team
        </label>

        <input type="text" id="home_team_id_box" name="query_home_team_id">
      </div>

      <div>
        <label for="away_team_id_box">
          Away team
        </label>

        <input type="text" id="away_team_id_box" name="query_away_team_id">
      </div>

      <div>
        <label for="week_box">
          Week
        </label>

        <input type="text" id="week_box" name="query_week">
      </div>

      <button>
        Create game
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Home team
        </th>

        <th>
          Away team
        </th>

        <th>
          Week
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_games.each do |a_game| %>
      <tr>
        <td>
          <%= a_game.id %>
        </td>

        <td>
          <%= a_game.home_team_id %>
        </td>

        <td>
          <%= a_game.away_team_id %>
        </td>

        <td>
          <%= a_game.week %>
        </td>

        <td>
          <%= time_ago_in_words(a_game.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_game.updated_at) %> ago
        </td>

        <td>
          <a href="/games/<%= a_game.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
