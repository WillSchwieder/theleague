<div>
  <div>
    <h1>
      Position #<%= @the_position.id %> details
    </h1>

    <div>
      <div>
        <a href="/positions">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_position/<%= @the_position.id %>">
          Delete position
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_position.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_position.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_position.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit position
    </h2>

    <form action="/modify_position/<%= @the_position.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_position.name %>">
      </div>

      <button>
        Update position
      </button>
    </form>
  </div>
</div>

<hr>
