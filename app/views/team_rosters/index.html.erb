<div>
  <div>
    <h1>
      List of all team rosters
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new team roster
    </h2>

    <form action="/insert_team_roster" method="post">
      <div>
        <label for="fantasy_team_id_box">
          Fantasy team
        </label>

        <input type="text" id="fantasy_team_id_box" name="query_fantasy_team_id">
      </div>

      <div>
        <label for="player_id_box">
          Player
        </label>

        <input type="text" id="player_id_box" name="query_player_id">
      </div>

      <div>
        <label for="add_date_box">
          Add date
        </label>

        <input type="text" id="add_date_box" name="query_add_date">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <div>
        <label for="drop_date_box">
          Drop date
        </label>

        <input type="text" id="drop_date_box" name="query_drop_date">
      </div>

      <button>
        Create team roster
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Fantasy team
        </th>

        <th>
          Player
        </th>

        <th>
          Add date
        </th>

        <th>
          Status
        </th>

        <th>
          Drop date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_team_rosters.each do |a_team_roster| %>
      <tr>
        <td>
          <%= a_team_roster.id %>
        </td>

        <td>
          <%= a_team_roster.fantasy_team_id %>
        </td>

        <td>
          <%= a_team_roster.player_id %>
        </td>

        <td>
          <%= a_team_roster.add_date %>
        </td>

        <td>
          <%= a_team_roster.status %>
        </td>

        <td>
          <%= a_team_roster.drop_date %>
        </td>

        <td>
          <%= time_ago_in_words(a_team_roster.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_team_roster.updated_at) %> ago
        </td>

        <td>
          <a href="/team_rosters/<%= a_team_roster.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
