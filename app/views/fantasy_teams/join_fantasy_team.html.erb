<div>
  <div>
    <h1>
      Sign-Up for League: <%= @matching_league.name %>
    </h1>
  </div>
</div>
<hr>
<div>
  <div>
    <h2>
      Pick a Team Name and Type!
    </h2>
    <form action="/insert_fantasy_team" method="post">
      <div>
        <label for="name_box">
          Name
        </label>
        <input type="text" id="name_box" name="query_name">
      </div>
      <div>
        <label for="team_type_id">
          Team Type
        </label>
        <select name="query_team_type_id" id="team_type_id">
          <% TeamType.order(:name).each do |a_team_type| %>
            <option value="<%= a_team_type.id %>">
              <%= a_team_type.specialpower %>
            </option>
          <% end %>
        </select>
        <label for="league_id">
        </label>
          <input type="hidden" id="league_id" name="query_league_id" value = <%= @matching_league.id %>>
        <label for="user_id">
        </label>
          <input type="hidden" id="user_id" name="query_user_id" value = <%= session.fetch(:user_id) %>>
      </div>
      <button>
        Create fantasy team
      </button>
    </form>
  </div>
</div>
