  <form action="/insert_bookmark" method="post">
    <input name="query_movie_id" type="hidden" value="<%= @the_movie.id %>">
    <input name="query_user_id" type="hidden" value="<%= session.fetch(:user_id) %>">
    <button>Bookmark this movie!</button>
  </form>
<% else %>
  <a href="/delete_bookmark/<%= the_bookmark.id %>">
    Un-bookmark
  </a>
<% end %>
<hr>
<div>
  <div>
    <h2>
      Edit fantasy team
    </h2>
    <form action="/modify_fantasy_team/<%= @the_fantasy_team.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>
        <input type="text" id="name_box" name="query_name" value="<%= @the_fantasy_team.name %>">
      </div>
      <div>
        <label for="team_type_id_box">
          Team type
        </label>
        <input type="text" id="team_type_id_box" name="query_team_type_id" value="<%= @the_fantasy_team.team_type_id %>">
      </div>
      <div>
        <label for="league_id_box">
          League
        </label>
        <input type="text" id="league_id_box" name="query_league_id" value="<%= @the_fantasy_team.league_id %>">
      </div>
      <button>
        Update fantasy team
      </button>
    </form>
  </div>
</div>
<hr>
