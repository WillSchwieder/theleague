<div>
  <div>
    <h1>
      Fantasy team #<%= @the_fantasy_team.id %> details
    </h1>
    <div>
      <div>
        <a href="/fantasy_teams">
          Go back
        </a>
      </div>
      
      <div>
        <a href="/delete_fantasy_team/<%= @the_fantasy_team.id %>">
          Delete fantasy team
        </a>
      </div>
    </div>
    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_fantasy_team.name %>
      </dd>
      <dt>
        Team type
      </dt>
      <dd>
        <%= @the_fantasy_team.team_type_id %>
      </dd>
      <dt>
        League
      </dt>
      <dd>
        <%= @the_fantasy_team.league_id %>
      </dd>
      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_fantasy_team.created_at) %> ago
      </dd>
      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_fantasy_team.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
<hr>
<% u_id = session.fetch(:user_id) %>
<% matching_leagues = League.where({ :user_id => u_id, :league_id => @the_fantasy_team.id }) %>
<% the_league = matching_leagues.at(0) %>
