<div>
  <div>
    <h1>
      List of all fantasy teams
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new fantasy team
    </h2>

    <form action="/insert_fantasy_team" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="team_type_id_box">
          Team type
        </label>

        <input type="text" id="team_type_id_box" name="query_team_type_id">
      </div>

      <div>
        <label for="league_id_box">
          League
        </label>

        <input type="text" id="league_id_box" name="query_league_id">
      </div>

      <button>
        Create fantasy team
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Team type
        </th>

        <th>
          League
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_fantasy_teams.each do |a_fantasy_team| %>
      <tr>
        <td>
          <%= a_fantasy_team.id %>
        </td>

        <td>
          <%= a_fantasy_team.name %>
        </td>

        <td>
          <%= a_fantasy_team.team_type_id %>
        </td>

        <td>
          <%= a_fantasy_team.league_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_fantasy_team.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_fantasy_team.updated_at) %> ago
        </td>

        <td>
          <a href="/fantasy_teams/<%= a_fantasy_team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
