<div>
  <div>
    <h1>
      List of all leagues
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new league
    </h2>

    <form action="/insert_league" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="year_box">
          Year
        </label>

        <input type="text" id="year_box" name="query_year">
      </div>

      <div>
        <label for="league_type_id_box">
          League type
        </label>

        <input type="text" id="league_type_id_box" name="query_league_type_id">
      </div>

      <button>
        Create league
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Year
        </th>

        <th>
          League type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_leagues.each do |a_league| %>
      <tr>
        <td>
          <%= a_league.id %>
        </td>

        <td>
          <%= a_league.name %>
        </td>

        <td>
          <%= a_league.year %>
        </td>

        <td>
          <%= a_league.league_type_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_league.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_league.updated_at) %> ago
        </td>

        <td>
          <a href="/leagues/<%= a_league.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
